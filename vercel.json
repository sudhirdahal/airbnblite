{
  "version": 2,
  "name": "airnb-lite-monorepo",
  
  /**
   * ============================================================================
   * ROOT DEPLOYMENT ORCHESTRATOR
   * ============================================================================
   * This configuration manages the global monorepo deployment strategy.
   * Logic: 
   * 1. Defines the 'Frontend' as the primary build target.
   * 2. Orchestrates the relationship between the root and sub-directories.
   */

  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],

  /* --- HISTORICAL STAGE 1: PRIMITIVE DEPLOY ---
   * { "version": 2 }
   * // Problem: Lacked context for sub-directory builds!
   */

  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
